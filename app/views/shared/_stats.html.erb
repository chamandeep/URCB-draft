<%= user = User.find(session[:user_id]) %>
<div class="stats">

  <a href="<%= following_user_path(@user.id) %>">
    <strong id="following" class="stat">
friends(<%= user.followed_users.count %>) 
</strong>
  </a>
<% @friends = user.followed_users %>
</div>

<table>
<tr>
<th>First Name: </th>
<th> Last Name:</th>
<th>Email:</th>
</tr>
<% @friends.each do |f| %>
<tr>
<td> <%= f.firstName %> </td>
<td> <%= f.lastName %> </td>
<td> <%= f.email %> </td>
</tr>
<% end%> </table>